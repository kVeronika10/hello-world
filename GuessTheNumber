import random
number=random.randint(1,100)
chislo=int(input("Введите число: "))
step=1
while chislo!=number:
    if chislo>number:
        print("Меньше")
    else:
        print("Больше")
    chislo=int(input("Введите число снова: "))
    step+=1
print("Вы угадали!Загаданное число",number,".""Вам понадобилось",step,"попыток.")
